#header    
    a(href="/")
        img.header-logo(src='./../img/lor_logo.png' alt='Lor Travel logo')
    ul#nav
        if user
            li
              a.nav__el(href='/') Home
            li
              a.nav__el(href='/about') About Us
            li
              a.nav__el(href='/all-tours') Tours
            li
              a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
            li
              a.nav__el.nav__el--logout Log out
        else
            li
              a.nav__el(href='/') Home 
            li
              a.nav__el(href='/about') About Us
            li
              a.nav__el(href='/all-tours') Tours
            li
              a.nav__el(href='/login') Login 

    #mobile-menu.mobile-menu-btn
        i.menu-icon.fas.fa-bars
    





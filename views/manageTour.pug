  // Modal Delete
  #exampleModalDelete.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog
      .modal-content
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close' style='margin-left: 94%; margin-top: 0.5rem;')
        img(src='img/alert-icon.png' alt='' style='width: 20%; margin-left: auto; margin-right: auto; margin-bottom: 0.4rem;')
        .modal-header(style='justify-content: center;')
          h1#exampleModalLabel.modal-title.fs-5(style='text-transform: uppercase; font-weight: bold; letter-spacing: 1.2px;') Remove Alert!
        .modal-body(style='margin-left: auto; margin-right: auto;')
          h1.fs-5 Are you sure you want to delete this item?
        .modal-footer(style='justify-content: center;')
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
            a(href="/manageTour")
          button.btn.btn-danger(type='button') Confirm
            a(href="#") 
  // Modal Edit
  #exampleModalEdit.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-xl
      .modal-content
        .modal-header
          h1#exampleModalLabel.modal-title.fs-7(style='text-transform: uppercase; font-weight: bold; letter-spacing: 1.3px; margin-left: 40%;')
            | Edit Tour
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body(style='background-color: #8ccca346;')
          .edit-tour-form
            form
              label(for='tourname') Tour name: 
              br
              input#edittourname(type='text' name='tourname' value='Phu Quoc Island' required='')
              br
              label(for='startday') Start Day: 
              input#editstartday(type='date' name='startday' value='2023-07-22' min='2023-01-01' max='2023-12-31' required='')
              label(for='endday') Duration: 
              input#editendday(type='number' name='endday' value='2023-07-29' min='2023-01-01' max='2023-12-31' required='')
              br
              label(for='tourprice') Tour Price: 
              br
              input#edittourprice(type='number' name='tourprice' value='500' required='')
              br
              label(for='tourguide') Tour Guide: 
              br
              input#edittourguide(type='text' name='tourguide' value='Thuong Nguyen' required='')
              br
              label(for='maxGroupSize') Max group size: 
              br
              input#editmaxGroupSize(type='text' name='maxGroupSize' value='2' required='')
              br
              label(for='difficulty') Difficulty: 
              br
              select(name='difficulty')
                option(value='easy', selected=true) Easy
                option(value='medium', selected=true) Medium
                option(value='difficult', selected=true) Difficult
              br
              label(for='summary') Summary: 
              br
              input#editsummary(type='text' name='summary' value='Good' required='')
              br
              label(for='editphoto') Image Cover: 
              br
              input(type='file', accept='image/*', id='editphoto', name='photo')
              br
              
        .modal-footer(style='justify-content: center;')
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
            a(href="/manageTour")
          button.btn.btn-success(type='button') Save changes
            a(href="#")
  // Modal Add
  #exampleModalAdd.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-xl
      .modal-content
        .modal-header
          h1#exampleModalLabel.modal-title.fs-7(style='text-transform: uppercase; font-weight: bold; letter-spacing: 1.3px; margin-left: 40%;')
            | Add New Tour
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body(style='background-color: #8ccca346;')
          .add-tour-form
            form
              label(for='tourname') Tour name: 
              br
              input#tourname(type='text' name='tourname' placeholder='Eg. Phu Quoc Island' required='')
              br
              label(for='startday') Start Day: 
              input#startday(type='date' name='startday' value='' min='2023-01-01' max='2023-12-31' required='')
              label(for='endday') Duration: 
              input#endday(type='number' name='endday' value='' min='2023-01-01' max='2023-12-31' placeholder='Eg. 10 Days' required='')
              br
              label(for='tourprice') Tour Price: 
              br
              input#tourprice(type='number' name='tourprice' value='' placeholder='Eg. $500' required='')
              br
              label(for='tourguide') Tour Guide: 
              br
              input#tourguide(type='text' name='tourguide' value='' placeholder='Eg. Thuong Nguyen' required='')
              br
              label(for='maxGroupSize') Max group size: 
              br
              input#maxGroupSize(type='text' name='maxGroupSize' placeholder='Eg. 30' value='' required='')
              br
              label(for='difficulty') Difficulty: 
              br
              select#difficulty(name='difficulty')
                option(value='easy', selected=true) Easy
                option(value='medium', selected=true) Medium
                option(value='difficult', selected=true) Difficult
              br
              label(for='summary') Summary: 
              br
              input#summary(type='text' name='summary' value='' placeholder='Summary About Your Tour' required='')
              br
              label(for='description') Description: 
              br
              input#description(type='text' name='description' placeholder='Description Of Your Tour' value='' required='')
              br
              label(for='photo') Image Cover: 
              br
              input(type='file', accept='image/*', id='photo', name='photo')
              br
        .modal-footer(style='justify-content: center;')
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
            a(href="/manageTour")
          button.btn.btn-success(type='button' data-bs-dismiss='modal') Add New Tour
            a(href="/addNewTour")
          
extend base

block append head 
  title Manage Tour
  link(rel='stylesheet' href='/css/manageTour.css')

block content
  .table(style='margin-bottom: 4rem;')
    section.table_header
      h2 Tour List
      .search
        input(type='search' placeholder='Search Data...')
        i.fa-solid.fa-magnifying-glass
    .add-new-tour-button
      button.btn.btn-light(type='button' data-bs-toggle='modal' data-bs-target='#exampleModalAdd')
        | Add
        | New Tour 
        i.fa-sharp.fa-solid.fa-plus
    section.container-table 
      table
        thead
          tr
            th  Tour Name 
            th  Start Day 
            th  Duration 
            th  Tour Price 
            th  Tour Guide 
        tbody
          each tour in tours
            tr
              td= tour.name
              td= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
              td= tour.duration
              td= tour.price
              td= tour.guides[0].name
              td
                i.fa-regular.fa-pen-to-square(data-bs-toggle='modal' data-bs-target='#exampleModalEdit')  
              td
                i.fa-regular.fa-trash-can(data-bs-toggle='modal' data-bs-target='#exampleModalDelete')
